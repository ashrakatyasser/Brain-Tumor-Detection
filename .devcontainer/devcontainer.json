{
  "name": "NeuroScan AI - Python 3.11",
  "image": "mcr.microsoft.com/devcontainers/python:1-3.11-bookworm",
  
  "customizations": {
    "codespaces": {
      "openFiles": [
        "README.md",
        "app.py"
      ]
    },
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": true,
        "python.formatting.provider": "black",
        "editor.formatOnSave": true
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.black-formatter"
      ]
    }
  },
  
  "updateContentCommand": "bash -c '[ -f packages.txt ] && sudo apt update && sudo xargs -a packages.txt apt install -y; pip3 install --upgrade pip && pip3 install --user -r requirements.txt && echo \"âœ… Packages installed and Requirements met\"'",
  
  "postAttachCommand": {
    "server": "streamlit run app.py --server.enableCORS false --server.enableXsrfProtection false"
  },
  
  "portsAttributes": {
    "8501": {
      "label": "NeuroScan AI Application",
      "onAutoForward": "openPreview"
    }
  },
  
  "forwardPorts": [8501],
  
  "features": {
    "ghcr.io/devcontainers/features/git:1": {}
  }
}
